<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.orsteg.harold">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon_filled"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon_filled"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Base">
        <activity android:name=".activities.MainActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.TemplateViewerActivity">
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AboutActivity"
            android:theme="@style/AppTheme.Full"/>
        <activity android:name=".activities.DownloadActivity" />
        <activity android:name=".activities.GradingActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.NewEventActivity" />
        <activity android:name=".activities.PasswordUpdateActivity" />
        <activity android:name=".activities.ProfileEditActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.TemplateBrowserActivity" />

        <receiver
            android:name=".receivers.AlarmReceiver"
            android:enabled="true" />
        <receiver
            android:name=".receivers.BootReceiver"
            android:enabled="false"
            android:exported="true" />

        <service
            android:name=".services.MessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".services.AppIdInstance">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>